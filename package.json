{
  "name": "clean-node-api",
  "version": "1.2.1",
  "description": "Example Node API using TDD and Clean Architecture",
  "main": "index.js",
  "engines": {
    "node": ">= 16.14.2 <18"
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
    "build": "rimraf dist && tsc",
    "up": "npm run build && docker compose up -d",
    "down": "docker compose down",
    "logs": "docker logs api-container --follow",
    "dev": "npm run up && npm run logs",
    "test": "jest --passWithNoTests --coverage=false --runInBand",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "npm test -- --runInBand=false --watch -c jest-unit.config.js",
    "test:integration": "npm test -- -c jest-integration.config.js",
    "test:staged": "npm test -- --onlyChanged",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "prepare": "husky install"
  },
  "author": "Thiago R. V. Martins",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^3.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/jest-when": "^3.5.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.0.1",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.4",
    "coveralls": "^3.1.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "jest-when": "^3.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.8.0",
    "nodemon": "^2.0.19",
    "validator": "^13.7.0"
  }
}
