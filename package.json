{
  "name": "clean-node-api",
  "version": "2.4.2",
  "description": "Example Node API using TDD and Clean Architecture",
  "main": "index.js",
  "engines": {
    "node": ">= 16.14.2 <18"
  },
  "scripts": {
    "start": "node dist/main/server.js",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "up": "npm run build && docker compose up -d",
    "down": "docker compose down",
    "check": "npm-check -s -u",
    "logs": "docker logs api-container --follow",
    "dev": "npm run up && npm run logs",
    "test": "jest --passWithNoTests --coverage=false --runInBand",
    "test:verbose": "jest --passWithNoTests",
    "test:unit": "npm test -- --runInBand=true --watch -c jest-unit.config.js",
    "test:integration": "npm test -- -c jest-integration.config.js",
    "test:staged": "npm test -- --onlyChanged",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "prepare": "husky install"
  },
  "author": "Thiago R. V. Martins",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@golevelup/ts-jest": "0.3.4",
    "@shelf/jest-mongodb": "4.1.4",
    "@types/bcrypt": "5.0.0",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.3",
    "@types/jest-when": "3.5.2",
    "@types/jsonwebtoken": "8.5.9",
    "@types/mongodb": "4.0.7",
    "@types/node": "18.11.10",
    "@types/supertest": "2.0.12",
    "@types/swagger-schema-official": "2.0.22",
    "@types/swagger-ui-express": "4.1.3",
    "@types/validator": "13.7.10",
    "copyfiles": "2.4.1",
    "coveralls": "3.1.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-prettier": "4.2.1",
    "git-commit-msg-linter": "4.4.0",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-extended": "3.2.0",
    "jest-when": "3.5.2",
    "lint-staged": "13.0.4",
    "npm-check": "6.0.1",
    "prettier": "2.8.0",
    "rimraf": "3.0.2",
    "supertest": "6.3.2",
    "ts-jest": "29.0.3",
    "typescript": "4.9.3"
  },
  "dependencies": {
    "@graphql-tools/schema": "9.0.10",
    "@graphql-tools/utils": "9.1.1",
    "@types/lodash": "4.14.191",
    "apollo-server-express": "3.11.1",
    "bcrypt": "5.1.0",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "graphql": "16.6.0",
    "jsonwebtoken": "9.0.0",
    "lodash": "4.17.21",
    "module-alias": "2.2.2",
    "mongodb": "4.12.1",
    "nodemon": "2.0.20",
    "swagger-ui-express": "4.6.0",
    "validator": "13.7.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
